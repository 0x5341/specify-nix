{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":automergeBranch"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "nix": {
    "managerFilePatterns": [
      "/(^|/)flake\\.nix$/"
    ],
    "commitMessageTopic": "nix",
    "commitMessageExtra": "to {{newValue}}",
    "enabled": true
  }
}
